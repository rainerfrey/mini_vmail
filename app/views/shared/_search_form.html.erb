<div class="search">
    <%= form_tag target_url, :method => :get do %>
        <p>
            <%= label_tag 'name_like',t(:'form.search.name') %>
            <%= text_field_tag 'name_like', params[:name_like] %>
            <%= label_tag 'domain_id',t(:'form.search.domain') %>
            <%= select_tag 'domain_id', options_from_collection_for_select(domains, :id, :name, params[:domain_id]), :include_blank => t(:'form.search.all_domains') %>
            <%= submit_tag 'Search', :name => nil %>
        </p>
    <% end %>
</div>
